<h1>New Answer</h1>

<%= form_for(@answer) do |f| %>

	<% Question.all.each do |question| %>
	  <div class="field">
	    <%= f.label :question_id %><br>
	    <%= select_tag 'group[answers][][question_id]', options_from_collection_for_select(Question.all, :id, :name), selected: [question.id, question.name] %>	
	  </div>
	  <div class="field">
	    <%= f.label :answer %><br>
	    <%= text_field_tag 'group[answers][][answer]' %>
	  </div>
	  <div class="field">
	    <%= f.label :attendee, '參與者' %><br>
	    <%= text_field_tag 'group[answers][][attendee]' %>
	  </div>
	<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', answers_path %>
